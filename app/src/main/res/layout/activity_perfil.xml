<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    tools:context="com.example.sebastian.trainingroutines.PerfilActivity">

    <Button
        android:id="@+id/btnentrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrenamiento" />

    <Button
        android:id="@+id/btnseguimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguimiento" />

    <Button
        android:id="@+id/btnalimentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentacion" />
</LinearLayout>
